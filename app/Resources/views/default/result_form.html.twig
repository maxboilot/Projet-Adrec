{% extends 'base.html.twig' %}

{% block body %}

    <div class="bloc1 text-center" style="padding: 4em 4em">
        <h2 style="text-align: center; padding-bottom: 1em">Parfait! Le questionnaire à bien été validé</h2>

        <p class="lead">D'après vos réponses et les informations saisies, voici les financements qui peuvent s'offrirent à vous :</p>

        <div>
            {% if answers == 'Salarié' %}
                <img src="{{ asset('assets/images/fongecif.png') }} width: 100px height: 100px">
            {% endif %}

            {% if answers == 'Demandeur(se) d\'emploi' %}
                <img src="{{ asset('assets/images/pole.png') }}">
                <img src="{{ asset('assets/images/region.png') }}">
            {% endif %}

            {% if answers == 'Etudiant(e)' %}
                <img src="{{ asset('assets/images/pole.png') }}">
                {% if answers == 'Etudiant(e)' %}
                    <img src="{{ asset('assets/images/mission-locale.png') }}">
                {% endif %}
            {% endif %}

            {% if answers == 'RQTH' %}
                <img src="{{ asset('assets/images/agefiph.png') }}">
            {% endif %}
        </div>

    </div>


{% endblock %}
